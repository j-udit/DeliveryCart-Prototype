@page
@model RazorPagesDeliveryCart.Pages_Shoppers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Create Account</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Shopper[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shopper[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shopper[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shopper[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shopper[0].PaymentMethod)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Shopper) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethod)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
